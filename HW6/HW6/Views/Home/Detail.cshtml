@model HW6.Models.ViewModels.PersonDashboardVM

@{
    ViewBag.Title = "Detail";
}

<h2 class="text-center">Details</h2>

<div class="container">
    <div class="row">
        <div class="col-md-5 borderLine">
            <h4>@Html.DisplayFor(model => model.FullName) (Personal Information)</h4>
            <hr />
            <dl class="dl-horizontal container">

                <dt>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PhoneNumber)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.FaxNumber)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FaxNumber)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.EmailAddress)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.EmailAddress)
                </dd>

                <dt>
                    
                    @Html.DisplayNameFor(model => model.Photo)
                    
                </dt>

                <dd>
                    @*@Html.DisplayFor(model => model.Photo)*@
                    <img src="https://via.placeholder.com/150C/O%20https://placeholder.com/" alt="" />
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ValidFrom)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ValidFrom)
                </dd>

            </dl>
        </div>
        @if (Model.CompanyName != null)
        {
            <div class="col-md-5 borderLine">
                <h4>Company Information</h4>
                <hr />
                <dl class="dl-horizontal container">
                    <dt>
                        @Html.DisplayNameFor(model => model.CompanyName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CompanyName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.FaxNumber)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.FaxNumber)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Website)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Website)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.YearStarted)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.YearStarted)
                    </dd>
                </dl>
            </div>

            <div class="col-md-5 borderLine">
                <h4>Purchase Summary</h4>
                <hr />
                <dl class="dl-horizontal container">
                    <dt>
                        @Html.DisplayNameFor(model => model.TotalOrders)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TotalOrders)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.GrossSales)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.GrossSales)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.GrossProfit)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.GrossProfit)
                    </dd>
                </dl>
            </div>

            <div class="col-md-5 borderLine">
                <h4>Top 10 Purchased Items</h4>
                <hr />
                <table class= "table">
                    <tr class="text-center">
                        <th> StockItemID </th>
                        <th> Description </th>
                        <th> Line Profit </th>
                        <th> Sales Person </th>
                    </tr>

                    @foreach (var item in Model.MostProfitableItems)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.StockItemID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProfitLine)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SalesPerson)
                        </td>

                    </tr>
                    }

                </table>
            </div>
        }
    </div>
</div>

